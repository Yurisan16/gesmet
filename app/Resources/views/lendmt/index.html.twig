{% extends 'base.html.twig' %}

{% block head %}
<link rel="stylesheet" href="{{ asset('/web/assets/css/datatables/dataTables.bootstrap.min.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div id="page-title">
        <h1 class="pull-left">Listado de pr√©stamos</h1>
    </div>
    </br>
    <div>
        {{ include ("assets_views/indexbuttons.html.twig",{
            'new_link' : path('lendmt_new'),
            'print_link' : path('lendmt_new'),
            'export_link' : path('lendmt_new'),
            }) }}
    </div>
    <div>
        <table id="datos" class="table table-hover">
            <thead>
                <tr>
                    <tr>
                        <th hidden>Id</th>
                        <th>Producto</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Recibido por</th>
                        <th>Motivo</th>
                        <th>Estado</th>
                        <th>Entregado por</th>
                        <th>Prestado</th>
                        <th>Acciones</th>
                    </tr>
                </tr>
            </thead>
            <tbody>
                {% for lendMT in lendMTs %}
                <tr>
                    <td hidden><a href="{{ path('lendmt_show', { 'id': lendMT.id }) }}">{{ lendMT.id }}</a></td>
                    <td>{{ lendMT.product.prodname}}</td>
                    <td>{{ lendMT.product.brand}}</td>
                    <td>{{ lendMT.product.model}}</td>
                    <td>{{ lendMT.received }}</td>                    
                    <td>{{ lendMT.reason }}</td>
                    <td>{{ lendMT.status }}</td>
                    <td>{{ lendMT.technician.technicianname }}</td>
                    <td>{% if lendMT.lenddate %}{{ lendMT.lenddate|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('lendmt_show', { 'id': lendMT.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('lendmt_edit', { 'id': lendMT.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
