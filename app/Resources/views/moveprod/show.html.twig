{% extends 'base.html.twig' %}

{% block body %}
    <h1>Detalles del movimiento del producto</h1>
    <div class="container">
        <div id="trabajador-subtitle" class="row">
            <div class="col-lg-12">
               <div class="trabajador-subtitle-data">
                    <a class="btn btn-danger pull-right" data-toggle="modal" href="#confirmDeleteModal" ><span class="glyphicon glyphicon-trash"></span> Eliminar</a>
                    <a class="btn btn-info pull-right" href="{{ path('moveprod_index',{'estado' : 'activo'}) }}"><span class="glyphicon glyphicon-arrow-left"></span> Volver a la lista</a>
                </div>
                <div>
                    <h3>Datos personales</h3>
                </div>
            
                <div class="col-lg-4">                    
                    <h5><p>Producto</p> {{ moveProd.product.prodname }}</h5>
                    <h5><p>Tipo de Movimiento</p> {{ moveProd.typemove }}</h5>
                    <h5><p>Destino</p>{{ moveProd.destination.areaname }}</h5>
                </div>
                <div class="col-lg-4">
                    <h5><p>Marca</p> {{ moveProd.product.brand }}</h5>
                    <h5><p>Fecha</p>{% if moveProd.movedate %}{{ moveProd.movedate|date('Y-m-d') }}{% endif %}</h5>
                    <h5><p>Tipo de Movimiento</p> {{ moveProd.typemove }}</h5>
                </div>
                <div class="col-lg-4">                    
                    <h5><p>Modelo</p> {{ moveProd.product.model }}</h5>
                    <h5><p>Cantidad</p>{{ moveProd.amount }}</h5>
                    <h5><p>Motivo</p>{{ moveProd.reason }}</h5>                    
                    <h5><p>Observaci√≥n</p>{{ moveProd.observation }}</h5>
                </div>
        </div>
    </div>
{% endblock %}
