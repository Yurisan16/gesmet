{% extends 'base.html.twig' %}

{% block body %}
    <h1>Technicians list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Technicianname</th>
                <th>Lastname</th>
                <th>Ci</th>
                <th>Cellphone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for technician in technicians %}
            <tr>
                <td><a href="{{ path('technician_show', { 'id': technician.id }) }}">{{ technician.id }}</a></td>
                <td>{{ technician.technicianname }}</td>
                <td>{{ technician.lastname }}</td>
                <td>{{ technician.ci }}</td>
                <td>{{ technician.cellphone }}</td>
                <td>{{ technician.email }}</td>
                <td>{{ technician.address }}</td>
                <td>{{ technician.position }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('technician_show', { 'id': technician.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('technician_edit', { 'id': technician.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('technician_new') }}">Create a new technician</a>
        </li>
    </ul>
{% endblock %}
