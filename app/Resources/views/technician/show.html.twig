{% extends 'base.html.twig' %}

{% block body %}
    <h1>Technician</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ technician.id }}</td>
            </tr>
            <tr>
                <th>Technicianname</th>
                <td>{{ technician.technicianname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ technician.lastname }}</td>
            </tr>
            <tr>
                <th>Ci</th>
                <td>{{ technician.ci }}</td>
            </tr>
            <tr>
                <th>Cellphone</th>
                <td>{{ technician.cellphone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ technician.email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ technician.address }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ technician.position }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('technician_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('technician_edit', { 'id': technician.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
